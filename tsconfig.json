{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // We can't use these for now because TS doesn't support conditional
        // disabling.
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "sourceMap": true,

        "outDir": "./target/",
        "declaration": true
    },
    "include": [
        "./src/*.ts",
        "./tests/*.ts"
    ]
}
